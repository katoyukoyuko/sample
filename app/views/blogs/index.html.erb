<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id), data: { confirm: 'このブログを編集しますか？' } %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete ,data: { confirm: 'このブログを削除しますか？' } %></td>
  </tr>
<% end %>
</table>

<%= link_to 'ブログ新規作成', new_blog_path %>

<%= link_to 'お問い合わせ', new_inquiry_path %>
